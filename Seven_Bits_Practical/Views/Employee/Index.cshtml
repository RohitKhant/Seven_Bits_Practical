@model IEnumerable<Seven_Bits_Practical.Models.Employee>
@using Seven_Bits_Practical.Models
@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create") |
    @Html.ActionLink("Search", "Search")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayName("Age")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <span>@common.GetDescription(@Enum.GetName(typeof(common.Department), item.Department))</span>
            </td>
            <td>
                <span>@common.AgeCalculation(item.DOB)</span>
            </td>
            <td>
                @Html.ActionLink("Add Salary", "AddSalary", new { id = item.Id }) |
                @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
